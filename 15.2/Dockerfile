RUN zypper install -y\
    autoconf \
    automake \
    byacc \
    bzip2 \
    libbz2-devel \
    cmake \
    curl \
    gcc \
    gcc-c++ \
    git \
    glib2-devel \
    kernel-devel \
    libcurl-devel \
    libevent-devel \
    libffi-devel \
    libjpeg8-devel \
    libopenssl-devel \
    libxml2-devel \
    libxslt-devel \
    make \
    ncurses-devel \
    openssl \
    postgresql-devel \
    readline-devel \
    sqlite3-devel \
    wget \
    which \
    zlib-devel \
    && zypper clean --all
